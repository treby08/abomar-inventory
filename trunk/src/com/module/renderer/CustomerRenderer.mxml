<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" creationComplete="creationCompleteHandler(event)"
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value _dataects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.adobe.cairngorm.control.CairngormEventDispatcher;
			import com.module.events.UserEvent;
			import com.module.views.CustomerBox;
			import com.module.views.CustomerListBox;
			import com.module.views.UserPanel;
			import com.variables.AccessVars;
			
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			private var _data:Object;
			private var _theBox:CustomerListBox;
			[Embed(source="assets/assets.swf", symbol="firefox_close_up")]
			private static var DEFAULT_CLOSE_UP:Class;
			
			public function set data(value:Object):void{
				_data = value
			}
			
			public function set theBox(value:CustomerListBox):void{
				_theBox = value
			}
			
			public function creationCompleteHandler(event:FlexEvent):void
			{
				txtName.text = _data.fname +" "+_data.mname +" "+_data.lname;
				txtBname.text = _data.businame;
				var contList:String = "";
				contList = (_data.pNum != "")?"Tel No. "+_data.pNum+"\r":"";
				contList += (_data.mNum != "")?"Cell No. "+_data.mNum+"\r":"";
				contList += (_data.bPhoneNum != "")?"Busi Tel No. "+_data.bPhoneNum+"\r":"";
				contList += (_data.bMobileNum != "")?"Busi Cell No. "+_data.bMobileNum+"\r":"";
				contList += (_data.email != "")?"Email Address: "+_data.email:"";
				txtContInfo.text = contList;
			}
			
			protected function editClickHandler(event:MouseEvent):void
			{
				_theBox.txtfname.text = _data.fname;
				_theBox.txtmname.text = _data.mname;
				_theBox.txtlname.text = _data.lname;
				_theBox.txtAdd.text = _data.address;
				_theBox.txtPhone.text = _data.pNum;
				_theBox.txtMobile.text = _data.mNum;
				_theBox.txtTin.text = _data.tin;
				_theBox.txtEmail.text = _data.email;
				_theBox.txtBname.text = _data.businame;
				_theBox.txtBAdd.text = _data.baddress;
				_theBox.txtBMobile.text = _data.bMobileNum;
				_theBox.txtBPhone.text = _data.bPhoneNum;
				_theBox.rbMale.selected = (_data.sex == "Male")
				_theBox.rbFemale.selected = (_data.sex == "Female")
				_theBox._type = 1;
				_theBox._data = _data;
				//_theBox.btnNewUser.visible = true;
				_theBox.btnSave.label = "Update";
				_theBox.btnSave.visible = true;
				_theBox.btnClear.label = "Reset to Default";
				_theBox.owner = this;
			}
			
			protected function deleteClickHandler(event:MouseEvent):void
			{
				Alert.show("Are you sure to delete \""+_data.fname +" "+_data.mname +" "+_data.lname+"\" as Customer?","Delete Customer",Alert.YES|Alert.NO,null,closeHandler);
			}
			
			private function closeHandler(evt:CloseEvent):void
			{
				if(evt.detail == Alert.YES){
					var delEvent:UserEvent = new UserEvent(UserEvent.DELETE_CUSTOMER,{custID:_data.custID,upnl:this});
					CairngormEventDispatcher.getInstance().dispatchEvent(delEvent);
				}
			}
			
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%">
		<s:fill><s:SolidColor color="{AccessVars.instance().colBgColor}" alpha="0.5" id="sFill"/></s:fill>
	</s:Rect>
	<s:HGroup paddingBottom="3" paddingTop="3" width="100%" fontSize="14" verticalAlign="middle" mouseOver="{sFill.color = AccessVars.instance().colBgColorOver}" mouseOut="{sFill.color=AccessVars.instance().colBgColor}"
			  useHandCursor="true" buttonMode="true" click="editClickHandler(event)">
		<s:Label id="txtName" width="30%" textAlign="center"/>
		<s:Label id="txtBname" width="35%" textAlign="center" visible="false" includeInLayout="false"/>
		<mx:Text id="txtContInfo" width="55%" />
		<s:HGroup width="15%" horizontalAlign="center" paddingRight="5">
			<!--<s:Button label="Edit" click="editClickHandler(event)"  useHandCursor="true" buttonMode="true"/>-->
			<s:Button icon="{DEFAULT_CLOSE_UP}" label="Del" click="deleteClickHandler(event)"  useHandCursor="true" buttonMode="true"/>
		</s:HGroup>
	</s:HGroup>
	
</s:Group>
