				trace("----------------------------");
				trace("dg_gridClickHandler",dg.selectedItem.pkgNo);
				trace("dg_gridClickHandler",dg.selectedItem.qtyRec);
				trace("dg_gridClickHandler",dg.selectedItem.remarks);
			}
			
